@model UpdateUserViewModel


<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">User Management /</span> Update User
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="All" style="color:red; font-weight:bold"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="FirstName" for="defaultFormControlInput" class="form-label">Firstname</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen isim giriniz" aria-describedby="defaultFormControlHelp">


                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" for="defaultFormControlInput" class="form-label">Lastname</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen soyisim giriniz" aria-describedby="defaultFormControlHelp">


                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Phone</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Telefon numarası giriniz" aria-describedby="defaultFormControlHelp">


                        </div>
                        <div class="form-group">
                            <label asp-for="Email" for="defaultFormControlInput" class="form-label">E-mail</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="email adresini giriniz" aria-describedby="defaultFormControlHelp">


                        </div>
                  
                        <div class="form-group">
                            <label asp-for="RoleId" id="defaultFormControlInput" class="form-label">Role</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>