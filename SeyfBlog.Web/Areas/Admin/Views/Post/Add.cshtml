
@model AddPostViewModel

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Post Management /</span> Add Post
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="Post" asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly"></div>
                     <div class="form-group">
                         <label asp-for="CategoryId">Category</label>
                           <select class="form-control" id="categoryList" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                           
                     </div>
                    <div class="form-group">
                        <label asp-for="Title" for="defaultFormControlInput" class="form-label">Title</label>
                        <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Başlık giriniz" aria-describedby="defaultFormControlHelp">
                           
    
                    </div>
                     <div class="form-group">
                        <label asp-for="Content" for="defaultFormControlInput" class="form-label">Content</label>
                        <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="İçerik giriniz." aria-describedby="defaultFormControlHelp"></textarea>
                            
    
                    </div>
                        <div class="form-group">
                            <label asp-for="ImageFile" for="defaultFormControlInput" class="form-label">Fotoğraf Seçiniz</label>
                            <input asp-for="ImageFile" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">


                        </div>
                    <div class="form-group mb-3">
                            <span asp-validation-for="CategoryId" class="text-danger"></span> <br />
                            <span asp-validation-for="Title" class="text-danger"></span> <br />
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
      
    </div>

</div>