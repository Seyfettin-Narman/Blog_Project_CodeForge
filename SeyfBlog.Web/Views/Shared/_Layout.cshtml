<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeyfBlog.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeyfBlog.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/blog/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/blog/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/blog/assets/css/owl.css">
</head>
<body>
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><h2>Seyf Blog<em>.</em></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" style="flex-grow:0" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://www.linkedin.com/in/seyfettin-narman/">
                                <i class="fa-brands fa-linkedin"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://www.instagram.com/seyf_nrmn/">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </li>
     
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="height:100px"></div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <script src="~/blog/vendor/jquery/jquery.min.js"></script>
    <script src="~/blog/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/blog/assets/js/custom.js"></script>
    <script src="~/blog/assets/js/owl.js"></script>
    <script src="~/blog/assets/js/slick.js"></script>
    <script src="~/blog/assets/js/isotope.js"></script>
    <script src="~/blog/assets/js/accordions.js"></script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; 
        function clearField(t) {                   
            if (!cleared[t.id]) {                      
                cleared[t.id] = 1;  
                t.value = '';       
                t.style.color = '#fff';
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
