
@model PostViewModel




<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="~/blog/assets/images/blog-post-01.jpg" alt="">
                                </div>
                                <div class="down-content">
                                    <a href="#"><h4>@Model.Title</h4></a>
                                    <ul class="post-info">
                                        <li>@Model.User.FirstName @Model.User.lastName</li>
                                        <li>@Model.CreatedDate.ToString("dd/MM/yyyy")</li>
                                        <li><i class="fa-solid fa-eye"></i> @Model.Views</li>
                                    </ul>
                                    <p>
                                        @Model.Content
                                    </p>
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    <li><a href="#">@Model.Category.Name</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>